<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Карта (занимает весь экран) -->
    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Контейнер для кнопок в правом верхнем углу -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg"
        android:elevation="8dp">

        <!-- Кнопка добавления меток -->
        <Button
            android:id="@+id/btn_add_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить метку"
            android:padding="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>

        <!-- Кнопка добавления заметок (изначально скрыта) -->
        <Button
            android:id="@+id/btn_add_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить заметку"
            android:padding="12dp"
            android:visibility="gone"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>

